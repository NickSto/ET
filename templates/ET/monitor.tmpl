{% extends 'bootstrap.tmpl' %}
{% load staticfiles %}

{% block title %}ET run reports{% endblock %}

{% block stylesheet %}
  <link rel="stylesheet" href="{% static 'ET/css/monitor.css' %}?via=html">
{% endblock %}

{% block content %}
  <div class="container-fluid">
    {% if prev or next %}
      <div class="buttons">
        {% if prev %}
          <a class="btn btn-default" href="{% url 'ET:monitor' %}?p={{ prev }}">&lt; Earlier</a>
        {% endif %}
        {% if next %}
          <a class="btn btn-default" href="{% url 'ET:monitor' %}?p={{ next }}">Later &gt;</a>
        {% endif %}
      </div>
    {% endif %}
    <section class="panel">
      <div class="panel-heading">
        <h4>Events
          <small>
            {% if end %}
              {{ start }} to {{ end }}
            {% endif %}
          </small>
        </h4>
      </div>
      <table id="events" class="panel-body table table-bordered table-condensed table-hover">
        <thead>
          <tr class="names">
            <td></td>
            <td>id</td>
            <td>type</td>
            <td>project</td>
            <td>script</td>
            <td>version</td>
            <td>platform</td>
            <td>test</td>
            <td>run_id</td>
          </tr>
        </thead>
        {% for event in events %}
          <tbody>
            <tr class="values new-run">
              <td rowspan=0>
                <p><a href="http://whatismyipaddress.com/ip/{{ event.visit.visitor.ip }}" rel="noreferrer" target="_blank">{{ event.visit.visitor.ip }}</a></p>
                <p>{{ event.visit.timestamp }} UTC</p>
              </td>
              <td>{{ event.id }}</td>
              <td>{{ event.type }}</td>
              <td>{{ event.project }}</td>
              <td>{{ event.script }}</td>
              <td>{{ event.version }}</td>
              <td>{{ event.platform }}</td>
              <td>{{ event.test }}</td>
              <td>{{ event.run_id }}</td>
            </tr>
            {% if event.run_data %}
              <tr>
                <td colspan="8"><code>{{ event.run_data }}</code></td>
              </tr>
            {% endif %}
          </tbody>
        {% endfor %}
      </table>
    </section>
    {% if prev or next %}
      <div class="buttons">
        {% if prev %}
          <a class="btn btn-default" href="{% url 'ET:monitor' %}?p={{ prev }}">&lt; Earlier</a>
        {% endif %}
        {% if next %}
          <a class="btn btn-default" href="{% url 'ET:monitor' %}?p={{ next }}">Later &gt;</a>
        {% endif %}
      </div>
    {% endif %}
  </div>
{% endblock content %}
